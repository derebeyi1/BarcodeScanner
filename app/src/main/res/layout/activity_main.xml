<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ysr.fiyatgor.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/border">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/subeAdiView"
                android:layout_width="82dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="center_vertical" />

        </FrameLayout>

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@null"
            android:cursorVisible="false"
            android:enabled="true"
            android:gravity="center"
            android:inputType="textPersonName"
            android:textColor="@android:color/transparent"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/barkod"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@mipmap/cizgi" />

        </FrameLayout>

        <TextView
            android:id="@+id/barkodu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/barkod"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_gravity="bottom"
            android:gravity="center" />

        <TextView
            android:id="@+id/adi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold" />

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/indirimcizgi"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher_foreground" />

            <TextView
                android:id="@+id/indirim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="25sp" />

        </FrameLayout>

        <TextView
            android:id="@+id/fiyati"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:gravity="center"
            android:textColor="#D50707"
            android:textSize="55sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="7dp" />

        <ImageView
            android:id="@+id/indirimImg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/indirim" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/subeView"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:text="Şube Adı" />

            <EditText
                android:id="@+id/subeAdi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15"
                android:inputType="textPersonName"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ipView"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:text="Veritabanı IP adresi" />

            <EditText
                android:id="@+id/ip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15"
                android:inputType="textPersonName"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dbAdiView"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:text="Database Adı" />

            <EditText
                android:id="@+id/dbAdi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15"
                android:inputType="textPersonName"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/klnView"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:text="Kullanıcı Adı" />

            <EditText
                android:id="@+id/klnAdi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15"
                android:inputType="textPersonName"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sifreView"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:text="Parola" />

            <EditText
                android:id="@+id/sifre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15"
                android:inputType="textPassword"
                android:textSize="14sp" />
        </LinearLayout>

        <Button
            android:id="@+id/kaydet"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:gravity="center"
            android:text="KAYDET"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/okutun"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:src="@mipmap/okutun" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>